<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TheLastHero.Views.ScoreDetailPage" Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Edit" Clicked="Edit_Clicked" />
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" />
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Spacing="10" Padding="5">
            <!--<Image Source="{Binding Data.ImgSource}" />-->
            <StackLayout Orientation="Horizontal">
                <Label Text="Name:" FontSize="12" />
                <Label Text="{Binding Data.Name}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ScoreTotal:" FontSize="12" />
                <Label Text="{Binding Data.ScoreTotal}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="GameDate:" FontSize="12" />
                <Label Text="{Binding Data.GameDate}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="AutoBattle:" FontSize="12" />
                <Label Text="{Binding Data.AutoBattle}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Turn Count:" FontSize="12" />
                <Label Text="{Binding Data.TurnCount}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Round Count:" FontSize="12" />
                <Label Text="{Binding Data.RoundCount}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="MonsterSlainNumber:" FontSize="12" />
                <Label Text="{Binding Data.MonsterSlainNumber}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ExperienceGainedTotal:" FontSize="12" />
                <Label Text="{Binding Data.ExperienceGainedTotal}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="CharacterAtDeathList:" FontSize="12" />
                <Label Text="{Binding Data.CharacterAtDeathList}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="MonstersKilledList:" FontSize="12" />
                <Label Text="{Binding Data.MonstersKilledList}" FontSize="12" TextColor="Blue" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ItemsDroppedList:" FontSize="12" />
                <Label Text="{Binding Data.ItemsDroppedList}" FontSize="12" TextColor="Blue" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
