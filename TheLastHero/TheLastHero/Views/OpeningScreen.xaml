<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheLastHero.Views.OpeningScreen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="The Last Hero" Style="{DynamicResource TitleStyle}" VerticalOptions="Center" HorizontalOptions="Center" />

            <Image Source="StartPage.JPG" Margin="0,20,0,50"/>

            <Button Clicked="MainPageButton_OnClicked" Text="TEST TAB SCREENS" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />

            <Button Clicked="BattlePageButton_OnClicked" Text="BEGIN GAME" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
            
            <Button Clicked="CharacterPageButton_OnClicked" Text="CHARACTERS" VerticalOptions="Center" HorizontalOptions="Fill" />

            <Button Clicked="MonstersPageButton_OnClicked" Text="MONSTERS" VerticalOptions="Center" HorizontalOptions="Fill" />

            <Button Clicked="ItemPageButton_OnClicked" Text="ITEMS" VerticalOptions="Center" HorizontalOptions="Fill" />

            <Button Clicked="InventoryPageButton_OnClicked" Text="INVENTORY" VerticalOptions="Center" HorizontalOptions="Fill" />

            <Button Clicked="ScorePageButton_OnClicked" Text="HIGH SCORE" VerticalOptions="Center" HorizontalOptions="Fill" />

        </StackLayout>

    </ContentPage.Content>

</ContentPage>